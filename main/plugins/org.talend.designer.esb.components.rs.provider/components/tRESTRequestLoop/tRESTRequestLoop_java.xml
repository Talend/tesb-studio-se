<?xml version="1.0" encoding="UTF-8"?>
<COMPONENT>
	<HEADER AUTHOR="ITOS" RELEASE_DATE="20110805A"
			VERSION="0.101" STATUS="ALPHA"
			COMPATIBILITY="ALL" PLATEFORM="ALL"
			SERIAL="" STARTABLE="true"
			SCHEMA_AUTO_PROPAGATE="true"
			DATA_AUTO_PROPAGATE="false"
			TECHNICAL="true">
		<SIGNATURE />
	</HEADER>
	<FAMILIES>
		<FAMILY>Technical</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MIN_OUTPUT="0" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="0" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" COLOR="0000FF" />
		<!-- CONNECTOR CTYPE="COMPONENT_ERROR" COLOR="FF0000" /> -->
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER FIELD="TEXT" NAME="REST_ENDPOINT" NUM_ROW="5" REQUIRED="true" SHOW="true">
			<DEFAULT>"http://localhost:8088/"</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="SERVICE_LOCATOR" FIELD="CHECK" NUM_ROW="110"
				SHOW="true" >
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="SERVICE_ACTIVITY_MONITOR" FIELD="CHECK" NUM_ROW="120"
				SHOW="true" >
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="USE_BUSINESS_CORRELATION" FIELD="CHECK" NUM_ROW="130">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
            <IMPORT MODULE="dom4j-${dom4j.version}.jar" MVN="mvn:org.dom4j/dom4j/${dom4j.version}" REQUIRED="true" />

            <IMPORT MODULE_GROUP="cxf-core" REQUIRED="true" />
            <IMPORT MODULE_GROUP="cxf-rt-rs-client" REQUIRED="true" />
            <IMPORT MODULE_GROUP="cxf-rt-transports-http-jetty" REQUIRED="true" />
            <IMPORT MODULE="cxf-rt-rs-service-description" REQUIRED="true" />

            <IMPORT MODULE_GROUP="spring-context"
                REQUIRED_IF="(SERVICE_LOCATOR == 'true') OR (SERVICE_ACTIVITY_MONITOR == 'true')" />

            <IMPORT MODULE_GROUP="locator"
                    REQUIRED_IF="SERVICE_LOCATOR == 'true'" />

            <IMPORT MODULE_GROUP="sam-agent"
                    REQUIRED_IF="SERVICE_ACTIVITY_MONITOR == 'true'" />

            <IMPORT MODULE_GROUP="correlationid-policy"
                    REQUIRED_IF="(USE_BUSINESS_CORRELATION == 'true')" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer" />
	</RETURNS>

</COMPONENT>
