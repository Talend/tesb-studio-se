<COMPONENT>

    <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
        COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20100401A"
        STARTABLE="true">
        <SIGNATURE />
    </HEADER>

    <FAMILIES>
        <FAMILY>Exception Handling</FAMILY>
    </FAMILIES>

    <DOCUMENTATION>
        <URL />
    </DOCUMENTATION>

    <CONNECTORS>
        <CONNECTOR CTYPE="ROUTE" MAX_INPUT="0" MAX_OUTPUT="1"
            MIN_OUTPUT="0" />
        <CONNECTOR CTYPE="ROUTE_WHEN" MAX_INPUT="0"
            MAX_OUTPUT="1" COLOR="086438" />
    </CONNECTORS>

    <PARAMETERS>
        <PARAMETER NAME="ROUTE_WHEN_LANGUAGES" FIELD="CLOSED_LIST"
            NUM_ROW="4" SHOW="false">
            <ITEMS DEFAULT="constant">
                <ITEM NAME="none" VALUE="none" />
                <ITEM NAME="constant" VALUE="constant" />
                <ITEM NAME="header" VALUE="header" />
                <ITEM NAME="property" VALUE="property" />
                <ITEM NAME="simple" VALUE="simple" />
                <ITEM NAME="xpath" VALUE="xpath" />
            </ITEMS>
        </PARAMETER>
    </PARAMETERS>

    <ADVANCED_PARAMETERS />

    <CODEGENERATION>
        <IMPORTS>
            <IMPORT MODULE_GROUP="camel-groovy"
                REQUIRED_IF="#LINK@CONNECTOR.ROUTE_WHEN.ROUTETYPE == 'groovy' " />
            <!-- camel-script -->
            <IMPORT NAME="camel-script" MODULE="camel-script-${camel.version}.jar"
                MVN="${mvn-camel-script}"
                UrlPath="platform:/plugin/org.talend.designer.camel.components.localprovider/lib/camel-script-${camel.version}.jar"
                REQUIRED_IF="#LINK@CONNECTOR.ROUTE_WHEN.ROUTETYPE == 'javaScript' " />
        </IMPORTS>
    </CODEGENERATION>

    <RETURNS />

</COMPONENT>