<!DOCTYPE document [
<!ENTITY languages SYSTEM "../common/languages.xml">
<!ENTITY namespaces SYSTEM "../common/namespaces.xml">
]>
<COMPONENT>

    <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
        COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20100401A"
        STARTABLE="false">
        <SIGNATURE />
    </HEADER>

    <FAMILIES>
        <FAMILY>Routing</FAMILY>
    </FAMILIES>

    <DOCUMENTATION>
        <URL />
    </DOCUMENTATION>

    <CONNECTORS>
        <CONNECTOR CTYPE="ROUTE_ENDBLOCK" MAX_INPUT="1"
            MAX_OUTPUT="1" MIN_OUTPUT="0" />
        <CONNECTOR CTYPE="ROUTE_WHEN" MAX_INPUT="0"
            MAX_OUTPUT="0" />
        <CONNECTOR CTYPE="ROUTE_OTHER" MAX_INPUT="0"
            MAX_OUTPUT="0" />
        <CONNECTOR CTYPE="ROUTE_TRY" MAX_INPUT="0" MAX_OUTPUT="0" />
        <CONNECTOR CTYPE="ROUTE_CATCH" MAX_INPUT="0"
            MAX_OUTPUT="0" />
        <CONNECTOR CTYPE="ROUTE_FINALLY" MAX_INPUT="0"
            MAX_OUTPUT="0" />
        <CONNECTOR CTYPE="ROUTE" MAX_INPUT="1" MAX_OUTPUT="0" />
    </CONNECTORS>

    <PARAMETERS>
        <PARAMETER NAME="URI" FIELD="TEXT" NUM_ROW="1"
            REQUIRED="true">
            <DEFAULT>""</DEFAULT>
        </PARAMETER>
        <PARAMETER NAME="NEW_EXCHANGE" FIELD="CHECK" REQUIRED="true"
            NUM_ROW="2">
            <DEFAULT>false</DEFAULT>
        </PARAMETER>
        <PARAMETER NAME="EXPRESSION" FIELD="RADIO" NUM_ROW="3"
            GROUP="POPULATETYPE" SHOW_IF="NEW_EXCHANGE == 'true'">
            <DEFAULT>true</DEFAULT>
        </PARAMETER>
        <PARAMETER NAME="PROCESSOR" FIELD="RADIO" NUM_ROW="4"
            GROUP="POPULATETYPE" SHOW_IF="NEW_EXCHANGE == 'true'">
            <DEFAULT>false</DEFAULT>
        </PARAMETER>
        <PARAMETER NAME="LANGUAGES" FIELD="CLOSED_LIST"
            NUM_ROW="6" REQUIRED="true"
            SHOW_IF="((EXPRESSION == 'true') and (NEW_EXCHANGE == 'true'))">
            <ITEMS DEFAULT="CONSTANT">
                &languages;
            </ITEMS>
        </PARAMETER>
        <PARAMETER NAME="EXPRESSIONTXT" FIELD="TEXT" NUM_ROW="7"
            REQUIRED="true"
            SHOW_IF="((EXPRESSION == 'true') and (NEW_EXCHANGE == 'true'))">
            <DEFAULT>""</DEFAULT>
        </PARAMETER>
        <PARAMETER NAME="CODE" FIELD="MEMO_JAVA" REQUIRED="false"
            NUM_ROW="7" NB_LINES="9" CONTEXT="begin"
            SHOW_IF="((PROCESSOR == 'true') and (NEW_EXCHANGE == 'true'))">
            <DEFAULT>System.out.println("We just downloaded: "+
                exchange.getIn().getHeader("CamelFileName"));</DEFAULT>
        </PARAMETER>
        &namespaces;
        <PARAMETER NAME="COPY_ORIGINAL_MESSAGE" FIELD="CHECK"
            REQUIRED="true" NUM_ROW="25">
            <DEFAULT>true</DEFAULT>
        </PARAMETER>
    </PARAMETERS>

    <ADVANCED_PARAMETERS />

    <CODEGENERATION>
        <IMPORTS>
            <IMPORT MODULE_GROUP="camel-groovy"
                REQUIRED_IF="(EXPRESSION == 'true') AND (NEW_EXCHANGE == 'true') AND (LANGUAGES == 'GROOVY')" />
            <!-- camel-script -->
            <IMPORT NAME="camel-script" MODULE="camel-script-${camel.version}.jar"
                MVN="${mvn-camel-script}"
                UrlPath="platform:/plugin/org.talend.designer.camel.components.localprovider/lib/camel-script-${camel.version}.jar"
                REQUIRED_IF="(EXPRESSION == 'true') AND (NEW_EXCHANGE == 'true') AND (LANGUAGES == 'JAVASCRIPT')" />
            <IMPORT NAME="talend-camel-jsonpath"
                MODULE="camel-jsonpath-alldep-${camel.version}.jar"
                MVN="mvn:org.talend.libraries/camel-jsonpath-alldep-${camel.version}/6.0.0"
                UrlPath="platform:/plugin/org.talend.libraries.camel.alldeps/lib/camel-jsonpath-alldep-${camel.version}.jar"
                REQUIRED_IF="(EXPRESSION == 'true') AND (NEW_EXCHANGE == 'true') AND (LANGUAGES == 'JSONPATH')" />
            <IMPORT NAME="talend-camel-saxon"
                MODULE="camel-saxon-alldep-${camel.version}.jar"
                MVN="mvn:org.talend.libraries/camel-saxon-alldep-${camel.version}/6.0.0"
                UrlPath="platform:/plugin/org.talend.libraries.camel.alldeps/lib/camel-saxon-alldep-${camel.version}.jar"
                REQUIRED_IF="(EXPRESSION == 'true') AND (NEW_EXCHANGE == 'true') AND (LANGUAGES == 'XQUERY')" />
        </IMPORTS>
    </CODEGENERATION>

    <RETURNS />

</COMPONENT>
